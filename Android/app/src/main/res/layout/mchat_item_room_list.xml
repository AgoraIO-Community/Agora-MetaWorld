<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="172dp"
    android:layout_marginTop="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mchat_bg_room_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_room_cover"
        tools:src="@drawable/mchat_room_cover0"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_room_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/mchat_ic_room_lock"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/iv_room_cover"
        app:layout_constraintStart_toStartOf="@id/iv_room_cover" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_room_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@string/mchat_app_name"
        android:textColor="@color/mchat_040925"
        android:textSize="@dimen/mchat_sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_room_cover"
        app:layout_constraintTop_toBottomOf="@id/iv_room_cover" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_room_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@string/mchat_room_id"
        android:textColor="@color/mchat_6c7192"
        android:textSize="@dimen/mchat_sp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_room_name"
        app:layout_constraintTop_toBottomOf="@id/tv_room_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/mchat_ic_room_members"
        android:textColor="@color/mchat_6c7192"
        android:textSize="@dimen/mchat_sp_10"
        android:drawablePadding="2dp"
        tools:text="99"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_room_cover" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnJoin"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/mchat_bg_rect_radius50_white"
        android:gravity="center"
        android:text="@string/mchat_join"
        android:textColor="@color/mchat_main_color_009fff"
        android:textSize="@dimen/mchat_sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>