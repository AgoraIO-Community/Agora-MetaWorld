<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    android:overScrollMode="never"
    android:scrollbars="none">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="io.agora.meta.example.ui.main.MainFragment">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="53dp"
            android:text="Meta"
            android:textColor="#ff8342e4"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_marginTop="54dp"
            android:src="@mipmap/girl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/medal"
            app:layout_constraintBottom_toBottomOf="@+id/avatar"
            app:layout_constraintEnd_toEndOf="@+id/avatar" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="275dp"
            android:layout_height="54dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/ic_edittext_background"
            android:drawableStart="@mipmap/user_fill"
            android:drawablePadding="14dp"
            android:hint="@string/input_nickname"
            android:maxLength="10"
            android:paddingHorizontal="30dp"
            android:singleLine="true"
            android:textColor="#ffa18bb0"
            android:textColorHint="#ffa18bb0"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar" />

        <EditText
            android:id="@+id/room_name"
            android:layout_width="275dp"
            android:layout_height="54dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/ic_edittext_background"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawableStart="@mipmap/user_fill"
            android:drawablePadding="14dp"
            android:hint="@string/input_room_name"
            android:maxLength="10"
            android:paddingHorizontal="30dp"
            android:singleLine="true"
            android:textColor="#ffa18bb0"
            android:textColorHint="#ffa18bb0"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nickname" />


        <EditText
            android:id="@+id/avatar_model"
            android:layout_width="275dp"
            android:layout_height="54dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/ic_edittext_background"
            android:drawableStart="@mipmap/user_star_fill"
            android:drawableEnd="@mipmap/arrow_down"
            android:drawablePadding="14dp"
            android:hint="@string/select_model"
            android:inputType="none"
            android:paddingHorizontal="30dp"
            android:textColor="#ffa18bb0"
            android:textColorHint="#ffa18bb0"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/room_name" />

        <Spinner
            android:id="@+id/avatar_model_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:dropDownWidth="275dp"
            android:dropDownVerticalOffset="62dp"
            android:popupBackground="@drawable/ic_spinner_dropdown_background"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_model"
            app:layout_constraintEnd_toEndOf="@+id/avatar_model"
            app:layout_constraintStart_toStartOf="@+id/avatar_model"
            app:layout_constraintTop_toTopOf="@+id/avatar_model" />

        <EditText
            android:id="@+id/scene"
            android:layout_width="275dp"
            android:layout_height="54dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/ic_edittext_background"
            android:drawableStart="@mipmap/user_star_fill"
            android:drawableEnd="@mipmap/arrow_down"
            android:drawablePadding="14dp"
            android:hint="@string/select_scene"
            android:inputType="none"
            android:paddingHorizontal="30dp"
            android:textColor="#ffa18bb0"
            android:textColorHint="#ffa18bb0"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar_model" />

        <Spinner
            android:id="@+id/scene_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            android:dropDownWidth="275dp"
            android:dropDownVerticalOffset="62dp"
            android:popupBackground="@drawable/ic_spinner_dropdown_background"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/scene"
            app:layout_constraintEnd_toEndOf="@+id/scene"
            app:layout_constraintStart_toStartOf="@+id/scene"
            app:layout_constraintTop_toTopOf="@+id/scene" />

        <ImageButton
            android:id="@+id/enter"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@mipmap/enter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scene_spinner" />

        <TextView
            android:id="@+id/enter_tip"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:alpha="0.41"
            android:text="@string/enter"
            android:textColor="#d9f9f9f9"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter" />

        <TextView
            android:id="@+id/logo_label"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.51"
            android:text="@string/agora_io"
            android:textColor="#d9ffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_tip" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>