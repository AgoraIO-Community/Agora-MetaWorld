<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tab_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="9dp"
        android:text="@string/mchat_christmas_songs"
        android:textColor="@color/mchat_white"
        android:textSize="@dimen/mchat_sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_tab_indicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/mchat_drawable_tab_indicator"
        app:layout_constraintEnd_toEndOf="@id/tv_tab_name"
        app:layout_constraintStart_toStartOf="@id/tv_tab_name"
        app:layout_constraintTop_toBottomOf="@id/tv_tab_name" />
</androidx.constraintlayout.widget.ConstraintLayout>