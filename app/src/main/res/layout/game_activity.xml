<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.GameActivity">

    <FrameLayout
        android:id="@+id/unity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/dress_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/dress_viewpage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tl_iconHeight="60dp"
        app:tl_iconWidth="60dp"
        app:tl_indicator_color="#2C97DE"
        app:tl_indicator_height='0dp'
        app:tl_textSelectColor="#2C97DE"
        app:tl_textUnselectColor="#66000000"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="0dp" />

    <io.agora.metachat.example.ui.view.NoScrollViewPager
        android:id="@+id/dress_viewpage"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="31dp"
        android:src="@mipmap/back"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <include
        android:id="@+id/card"
        layout="@layout/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/users"
        app:layout_constraintTop_toTopOf="@+id/back"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/users"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/user_list"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/mic"
        app:layout_constraintTop_toTopOf="@+id/back"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/mic"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/microphone_on"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/speaker"
        app:layout_constraintTop_toTopOf="@+id/back"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/speaker"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="5dp"
        android:src="@mipmap/voice_on"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintRight_toLeftOf="@id/dress_setting"
        app:layout_constraintTop_toTopOf="@+id/back"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/dress_setting"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="21dp"
        android:src="@drawable/dress_setting"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_switch_local_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="21dp"
        android:text="@string/hide_local_view"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dress_setting" />

    <Button
        android:id="@+id/btn_switch_remote_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/hide_remote_view"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/btn_switch_local_view"
        app:layout_constraintTop_toBottomOf="@id/dress_setting" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_local_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_max="@dimen/local_view_max_width" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_remote_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/remote_view_max_width" />

</androidx.constraintlayout.widget.ConstraintLayout>